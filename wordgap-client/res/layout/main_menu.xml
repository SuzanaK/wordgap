<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/mistygreen"

        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_margin="20dip"
            android:id="@+id/title_linear"
            android:layout_gravity="center"
            android:layout_marginBottom="40dip"
            >

                   <ImageView
                           android:layout_width="wrap_content"
                           android:background="@drawable/title"
                           android:id="@+id/title"
                           android:layout_gravity="center"

                           android:padding="10dip"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">
                           >


                   </ImageView>
             </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

                  android:layout_width="fill_parent"

                  android:layout_height="wrap_content"
                  android:weightSum="2"
                  android:layout_alignTop="@id/title_linear"
                  android:layout_centerHorizontal="true"
                  android:layout_centerInParent="true"
                  android:layout_marginTop="60dip"
                  android:layout_marginBottom="20dip"
            >

        <ImageView android:id="@+id/one"

                   android:src="@drawable/new_exercise"
                   android:layout_width="0dip"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_margin="20dip"
                   android:onClick="imageClick"
                />
        <ImageView android:id="@+id/two"

                   android:src="@drawable/open"
                   android:layout_width="0dip"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_margin="20dp"
                   android:onClick="imageClick"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="20dip"

            >
        <ImageView android:id="@+id/three"

                   android:src="@drawable/list"
                   android:layout_width="0dip"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_margin="20dp"
                   android:onClick="imageClick"/>

        <ImageView android:id="@+id/four"

                   android:src="@drawable/share"
                   android:layout_width="0dip"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_margin="20dp"
                   android:onClick="imageClick"/>


    </LinearLayout>





</RelativeLayout>

